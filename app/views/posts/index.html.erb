<h1>投稿一覧</h1>
<% @posts.each do |post| %>
  <%= link_to post do %>
    <div>
      <p><%= image_tag post.image.url %></p>
      <p>タイトル <%= post.title %></p>
      <p>カテゴリー <%= post.category.name %></p>
      <p><%= post.status %></p>
    </div>
  <% end %>
<% end %>

<%= link_to "new", new_post_path %>