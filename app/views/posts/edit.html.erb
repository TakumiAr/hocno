<div class="row">
  <div class="col m8 s12 offset-m2" align="center">
    <div class="new-box">
      <h4>欲しい物の情報を編集</h4>
      <%= form_with(model: @post, local: true) do |f| %>
        <%= f.label :image %>
        <div id="img_field" onClick="$('#file').click()" >
          <% if @post.image.url.present? %>
            <%= image_tag @post.image.url %>
          <% else %>
            <i class="material-icons">image</i>
            <i class="material-icons add">add</i>
          <% end %>
        </div>
        <div>
          <%= f.file_field :image, class: "image", style: "display:none;", id: "file" %>
          <%= f.hidden_field :image_cache %>
        </div>
        <div class="input-field">
          <%= f.text_field :title %>
          <%= f.label :title, class: "active" %>
        </div>
        <div>
          <%= f.select :category_id, options_for_select(Category.all.map{ |c| [c.name, c.id] }), prompt: "Select Category" %>
          <%= f.label :category %>
        </div>
        <div class="input-field">
          <%= f.text_area :content, class: "materialize-textarea" %>
          <%= f.label :content, class: "active" %>
        </div>
        <div class="input-field">
          <%= f.number_field :price %>
          <%= f.label :price, class: "active" %>
        </div>
        <div class="input-field">
          <%= f.number_field :budget %>
          <%= f.label :budget, class: "active" %>
        </div>
        <div>
          <label>
            <%= f.radio_button :status, :迷い中, class: "with-gap" %>
            <span>迷い中</span>
          </label>
          <label>
            <%= f.radio_button :status, :購入, class: "with-gap" %>
            <span>購入</span>
          </label>
          <label>
            <%= f.radio_button :status, :断念, class: "with-gap" %>
            <span>断念</span>
          </label>
        </div>
        <div class="form-button">
          <%= button_tag :type => "submit", :class =>"btn waves-effect waves-light" do %>
            <i class="fa fa-plus">new</i>
          <% end %>
          <%= link_to :back, class: "btn white black-text waves-effect waves-light" do %>
            <i class="fas fa-step-backward">back</i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>