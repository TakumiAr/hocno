<!DOCTYPE html>
<html>
<head>
  <title>Hocno</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<body>
<!--navbar start-->
<nav class="blue darken-2">
  <div class="container">
    <div class="nav-wrapper">
      <%= link_to "Hocno", posts_path, class: "brand-logo" %>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li>
            <a><i class="material-icons" onclick="search(0)">search</i></a>
          </li>
          <li>
            <%= link_to like_users_path do %>
              <i class="material-icons red-text">favorite</i>
            <% end %>
          </li>
          <li>
            <%= link_to notices_path do %>
              <i class="material-icons yellow-text">notifications</i>
            <% end %>
          </li>
          <li>
            <% if current_user.admin? %>
              <%= link_to rails_admin_path do %>
                <i class="material-icons grey-text">settings</i>
              <% end %>
            <% end %>
          </li>
          <li data-target="slide-out" class="sidenav-trigger"><a><i
            class="material-icons
          nav-icon">account_circle</i></a></li>
        <% else %>
          <li><%= link_to "sign Up", new_user_registration_path %></li>
          <li><%= link_to "log In", new_user_session_path %></li>
        <% end %>
      </ul>
      <!--      sidenav start-->
      <% if user_signed_in? %>
        <ul id="slide-out" class="sidenav">
          <li><div class="user-view">
            <div class="background">
              <%= image_tag('side-background.jpg') %>
            </div>
            <%= image_tag current_user.icon.url, class: "circle" %>
            <span class="white-text name"><%= current_user.name %></span>
            <span class="white-text email"><%= current_user.email %></span>
          </div></li>
          <li><%= search_form_for(@q, url:search_path) do |f| %>
              <div class="col m3 s12 title-cont">
                <%= f.search_field :title_cont, placeholder: "単語で検索" %>
              </div>
              <div class="col m3 s12">
                <%= f.select :category_id_eq, options_for_select(Category.all.map{ |c| [c.name, c.id] }), include_blank: 'カテゴリー' %>
              </div>
              <div class="col m3 s12">
                <%= f.select :status_eq, [["迷い中", "迷い中"], ["購入", "購入"], ["断念", "断念"]], include_blank: '状態' %>
              </div>
              <div class="col m2 s6 button">
                <%= f.submit "検索する", class: "btn-small btn white green-text" %>
              </div>
            <% end %></li>
          <li>
            <%= link_to new_post_path do %>
              <i class="material-icons green-text">create</i><span>new</span>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(current_user) do %>
              <i class="material-icons">person</i><span>profile</span>
            <% end %>
          </li>
          <li>
            <%= link_to listing_users_path do %>
              <i class="material-icons">apps</i><span>listing</span>
            <% end %>
          </li>
          <li>
            <%= link_to like_users_path do %>
              <i class="material-icons red-text">favorite</i><span>like</span>
            <% end %>
          </li>
          <li>
            <%= link_to notices_path do %>
              <i class="material-icons yellow-text">notifications</i><span>notification</span>
            <% end %>
          </li>
          <li>
            <%= link_to thinking_users_path do %>
              <i class="material-icons green-text">sentiment_dissatisfied</i><span>thinking</span>
            <% end %>
          </li>
          <li>
            <%= link_to purchase_users_path do %>
              <i class="material-icons red-text">mood_good</i><span>purchase</span>
            <% end %>
          </li>
          <li>
            <%= link_to abandonment_users_path do %>
              <i class="material-icons blue-text">mood_bad</i><span>abandonment</span>
            <% end %>
          </li>
          <li><div class="divider"></div></li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, data: { confirm: "ログアウトしますか？" } do %>
              <i class="material-icons black-text">exit_to_app</i><span>sign out</span>
            <% end %>
          </li>
          <li>
            <%= link_to close_account_users_path do %>
              <i class="material-icons red-text">warning</i><span>close_account</span>
            <% end %>
          </li>
          <li>
          </li>
        </ul>
      <% end %>
      <!--      sidenav end-->
      <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    </div>
  </div>
</nav>
<div id="search" class="search" style="display: none">
  <div class="container">
    <div class="row">
      <%= render partial: 'posts/search_form' %>
    </div>
  </div>
</div>

<!--  <ul>-->
<div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
