<!DOCTYPE html>
<html>
<head>
  <title>Hocno</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<body>
<nav class="blue darken-2">
  <div class="container">
    <div class="nav-wrapper">
      <%= link_to "Hocno", posts_path, class: "brand-logo" %>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li><%= link_to 'like', like_users_path %></li>
          <li><%= link_to 'notification', notices_path %></li>
          <li><%= link_to "new", new_post_path %></li>
          <li><%= link_to "admin", rails_admin_path if current_user.admin? %></li>
        <% else %>
          <li><%= link_to "sign Up", new_user_registration_path %></li>
          <li><%= link_to "log In", new_user_session_path %></li>
        <% end %>
      </ul>
      <ul id="slide-out" class="sidenav">
        <li><div class="user-view">
          <div class="background">
            <%= image_tag('side-background.jpg') %>
          </div>
          <%= image_tag current_user.image.url, class: "circle" %>
          <a href="#name"><span class="white-text name">John Doe</span></a>
          <a href="#email"><span class="white-text email">jdandturk@gmail.com</span></a>
        </div></li>
        <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
        <li><a href="#!">Second Link</a></li>
        <li><div class="divider"></div></li>
        <li><a class="subheader">Subheader</a></li>
        <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
      </ul>
      <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    </div>
  </div>
</nav>




