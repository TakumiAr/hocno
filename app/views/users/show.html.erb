<div class="row">
  <div class="profile-box col s6 offset-s3">
    <div class="profile-icon">
      <%= image_tag @user.icon.url %>
    </div>
    <p><%= @user.name %></p>
    <div class="status-box">
      <span>悩み中 <%= @user.posts.where(status: 0).count %></span>
      <span>購入 <%= @user.posts.where(status: 1).count %></span>
      <span>断念 <%= @user.posts.where(status: 2).count %></span>
    </div>
  </div>

  <% if @user.id == current_user.id %>
    <div class="col s12 link-button">
      <%= link_to edit_user_registration_path, class: "btn white green-text waves-effect waves-green" do %>
        <i class="far fa-edit">edit</i>
      <% end %>
    </div>
  <% else %>
    <% @user.posts.each do |post| %>
      <div class="col s12 m6 l4">
        <%= link_to post do %>
          <div class="card">
            <% if post.status == '迷い中' %>
            <% elsif post.status == '購入' %>
              <div class="status purchase">
                <i class="medium material-icons">mood_good</i>
              </div>
            <% else %>
              <div class="status abandonment">
                <i class="medium material-icons">mood_bad</i>
              </div>
            <% end %>
            <div class="card-image">
              <%= image_tag post.image.url %>
            </div>
            <div class="card-title"><%= post.title %></div>
            <div class="card-action card-info">
              <span><%= post.category.name %></span>
              <div class="comment-like">
                <span><i class="far fa-comment-alt"></i> <%= post.comments.count %></span>
                <span><i class="fas fa-heart red-text"></i> <%= post.like_users.count %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>